# Lights of Elm Ridge - Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# SITE CONFIGURATION
# ===========================================

# Base URL for the site (used for sitemap, canonical URLs, etc.)
NEXT_PUBLIC_SITE_URL=https://lightsofelmridge.com

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# xLights Sequences vendor URL
NEXT_PUBLIC_XLIGHTS_SEQ_URL=https://xlightsseq.com

# YouTube channel URL
NEXT_PUBLIC_YOUTUBE_CHANNEL=https://www.youtube.com/@LightsofElmRidge

# ===========================================
# NEWSLETTER SERVICE (optional)
# ===========================================

# Mailchimp API Key (if using Mailchimp)
# MAILCHIMP_API_KEY=your-api-key

# Mailchimp Audience ID
# MAILCHIMP_AUDIENCE_ID=your-audience-id

# ConvertKit API Key (if using ConvertKit)
# CONVERTKIT_API_KEY=your-api-key

# ConvertKit Form ID
# CONVERTKIT_FORM_ID=your-form-id

# ===========================================
# ANALYTICS (optional)
# ===========================================

# Google Analytics 4 Measurement ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ===========================================
# CLOUDFLARE (for reference)
# ===========================================

# These are configured in Cloudflare Pages dashboard, not here:
# - Custom domain settings
# - Build configuration
# - Environment variables for production/preview

# ===========================================
# SUPABASE (Authentication & Database)
# ===========================================

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anon (Public) Key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ===========================================
# ADMIN ACCESS
# ===========================================

# Admin email address (for accessing /admin dashboard)
NEXT_PUBLIC_ADMIN_EMAIL=your-admin-email@example.com
